@model IEnumerable<ProductResponse>
@{
    ViewBag.Title = "Products";
}

<h1>All Product</h1>

<link href="~/css/AdminCSS/allproductstyle.css" rel="stylesheet" />

<table>
    <caption>Product List</caption>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Sales Price</th>
            <th>Product Short Description</th>
            <th>Product Description</th>
            <th>Stock</th>
            <th>SKU ID</th>
            <th>Product ID</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(ProductResponse product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>$@product.ProductPrice</td>
                <td>$@product.ProductSalePrice</td>
                <td>Short description of product 1</td>
                <td>Detailed description of product 1, highlighting its features and specifications.</td>
                <td>@product.Stock</td>
                <td>@product.SkuID</td>
                <td>@product.ProductID</td>

                <td>
                    <a asp-controller="Product" asp-action="EditProduct" asp-area="Admin" asp-route-productID="@product.ProductID">Edit</a>

                    <a asp-controller="Product" asp-action="DeleteProduct" asp-area="Admin" asp-route-productID="@product.ProductID">Delete</a>
                </td>
            </tr>
        }
            
        </tbody>
    </table>

