<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Admin-Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/2bc1fc5521.js" crossorigin="anonymous"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .inner-container {
            display: flex;
        }

        .left-container {
            background-color: whitesmoke;
            height: 100vh;
            width: 20%;
            box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
        }

        .right-container {
            width: 80%;
        }

        .left-container ul {
            list-style: none;
        }

        .left-container ul li {
            @* border: 1px solid black; *@
            margin: 10px 10px;
            padding: 10px 10px;
        }

        .left-container ul li a {
            color: black;
            text-decoration: none;
            font-size: 1.5rem;
            display: block;
        }
        .left-container ul li a i{
            font-size: 1.5rem;
            padding: 0 10px;
        }
        .navbar{
            box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
        }

        /* Dropdown Code */

        /* .dropdown-content { */
        /*     display: none; */
        /*     position: absolute; */
        /*     background-color: #f1f1f1; */
        /*     min-width: 160px; */
        /*     overflow: auto; */
        /*     box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2); */
        /*     z-index: 1; */
        /* } */

        .dropdown-content{
            font-size:1.2rem;
        }

    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Perfume Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <div class="inner-container">
            <div class="left-container">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index" asp-area="admin"><i class="fa-solid fa-house"></i>Home</a></li>
                    <li>
                        <a>
                            <i class="fa-solid fa-box"></i>Product
                            <ul id="myDropdown" class="dropdown-content">
                                <li><a asp-controller="Product" asp-action="AddProduct" asp-area="admin">Add Product</a></li>
                                <li><a asp-controller="Product" asp-action="AllProduct" asp-area="admin">View Product</a></li>
                    </ul>    
                    </a></li>
                    <li><a asp-controller="Categories" asp-action="Categories" asp-area="admin"><i class="fa-solid fa-layer-group"></i>Categories</a></li>
                    <li><a asp-controller="Orders" asp-action="Orders" asp-area="admin"><i class="fa-solid fa-cart-shopping"></i>Orders</a></li>
                    <li><a asp-controller="Customers" asp-action="Customers" asp-area="admin"><i class="fa-solid fa-users"></i>Customers</a></li>
                    <li><a asp-controller="User" asp-action="User" asp-area="admin"><i class="fa-solid fa-user"></i>User</a></li>
                </ul>
            </div>
            <div class="right-container">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
