@using Entities.IdentityEntity
@using Microsoft.AspNetCore.Identity

@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HeartsDesireLuxury</title>
    <link href="~/css/HomeStyle.css" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="/images/heartslogo.png" />
</head>

<body>
    @* <div class="marquee-main">
        <marquee class="marq" direction="left" loop="" scrollamount=20>
            <div class="Hearts">
                HeartsDesireLuxury
            </div>
        </marquee>
    </div> *@
    <header class="transparent-navbar">
        <div class="top-header">
            <!-- Search Bar (Left on Desktop, Hidden on Mobile) -->
            <input type="text" placeholder="Search for Shower G" class="search-box">

            <!-- Mobile Menu Icon (Left) -->
            <div class="menu-toggle" onclick="toggleMenu()">☰</div>

            <!-- Logo (Center) -->
            <img src="~/images/heartslogo.png" alt="Bella Vita" class="logo">

            <!-- Icons (Right) -->
            <div class="icons">
                @if(User.Identity.IsAuthenticated)
                {
                        
                        var user = await UserManager.GetUserAsync(User);
                        var customerName = user?.CustomerName;
                    
                   
                    <div class="account-dropdown">
                        <span class="customer-name">@customerName</span>
                        <div class="dropdown-icon">👤</div>
                        <div class="dropdown-menu">
                           @*  <a asp-controller="Account" asp-action="Login">Login</a> *@
                            <a asp-controller="Account" asp-action="Logout">Logout</a>
                           @*  <a asp-controller="Account" asp-action="Register">Register</a> *@
                            <a asp-controller="" asp-action="">Profile</a>
                            <a asp-controller="" asp-action="">Order History</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="account-dropdown">
                        <div class="dropdown-icon">👤</div>
                        <div class="dropdown-menu">
                            <a asp-controller="Account" asp-action="Login">Login</a>
                           @*  <a asp-controller="Account" asp-action="Logout">Logout</a> *@
                            <a asp-controller="Account" asp-action="Register">Register</a>
                         @*    <a asp-controller="" asp-action="">Profile</a>
                            <a asp-controller="" asp-action="">Order History</a> *@
                        </div>
                    </div>
                }

                  
                @* <span class="user-icon"><a asp-controller="Account" asp-action="Register">👤</a></span> *@
                <span class="cart-icon">🛍️</span>
            </div>
        </div>

        <!-- Navigation Menu -->
        <nav class="nav-menu">
            <ul id="menu-list">
                <li><a href="#">Crazy Deals</a></li>
                <li><a href="#">Shop All</a></li>
                <li><a href="#">Bestsellers</a></li>
                <li><a href="#">Perfumes</a></li>
                @* <li><a href="#">Bath & Body</a></li> *@
                @* <li><a href="#">Cosmetics</a></li> *@
                <li><a href="#">New Arrivals</a></li>
                <li><a href="#">Skincare</a></li>
                <li><a href="#">Gifting</a></li>
            </ul>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script>
        function toggleMenu() {
            var menu = document.getElementById("menu-list");
            menu.classList.toggle("show");
        }

    </script>

</body>

</html>
