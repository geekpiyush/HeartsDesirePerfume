@{
	ViewBag.Title = "Login";
}
<style>
    .container {
        background-color: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        width: 350px;
    }

    .form-container {
        display: flex;
        flex-direction: column;
    }

    .login-details input[type="text"],
    .login-details input[type="password"] {
        width: 100%;
        padding: 12px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        margin: 10px 0;
        font-size: 14px;
    }

        .checkbox-label label {
            margin-right: 10px;
        }

    .login-details span {
        display: block;
        margin-top: 20px;
        font-size: 14px;
        text-align: center;
    }

    .login-details a {
        color: #007bff;
        text-decoration: none;
    }

        .login-details a:hover {
            text-decoration: underline;
        }

    button {
        height: 35px;
        width: 50%;
        margin-left: 25%;
        background-color: #007bff;
        color: white;
        font-size: 15px;
        font-weight: 500;
        border: none;
        border-radius: 10px;
    }
</style>
<div class="container">
    <div class="form-container">
        <div class="login-details">
            <input type="text" placeholder="Username" />
            <input type="password" placeholder="Password" />

            <!-- Inline checkbox and label -->
            <div class="checkbox-label">
                <label for="remember">Remember me</label>
                <input type="checkbox" id="remember">
            </div>
            <button>Login</button>
            <span>Want to forget your password? <a href="#">Click here</a></span>
        </div>
    </div>
</div>