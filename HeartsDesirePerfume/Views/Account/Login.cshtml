    .container {
        background-color: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        width: 350px;
    }

    .form-container {
        display: flex;
        flex-direction: column;
    }

    .login-details input[type="text"],
    .login-details input[type="password"] {
        width: 100%;
        padding: 12px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        margin: 10px 0;
        font-size: 14px;
    }

        .checkbox-label label {
            margin-right: 10px;
        }

    .login-details span {
        display: block;
        margin-top: 20px;
        font-size: 14px;
        text-align: center;
    }

    .login-details a {
        color: #007bff;
        text-decoration: none;
    }

        .login-details a:hover {
            text-decoration: underline;
        }

    button {
        height: 35px;
        width: 50%;
        margin-left: 25%;
        background-color: #007bff;
        color: white;
        font-size: 15px;
        font-weight: 500;
        border: none;
        border-radius: 10px;
    }
</style>
<form asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
    <div class="container">
        <div class="form-container">
            <div class="login-details">
                @if (ViewData.ModelState["Login"] != null)
                {
                    <div style="color:red; text-align:center; margin-bottom:10px;">
                        @ViewData.ModelState["Login"].Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                }
                <input type="text" placeholder="Username" asp-for="Email" />
                <span asp-validation-for="Email"></span>

                <input type="password" placeholder="Password" asp-for="Password" />
                <span asp-validation-for="Password"></span>

                <!-- Inline checkbox and label -->
                <div class="checkbox-label">
                    <label for="remember">Remember me</label>
                    <input type="checkbox" asp-for="KeepMeSignedin">
                </div>
                <button type="submit">Login</button>
                <span>Want to forget your password? <a asp-action="ForgetPassword" asp-controller="Account">Click here</a></span>
            </div>
        </div>
    </div>
</form>
