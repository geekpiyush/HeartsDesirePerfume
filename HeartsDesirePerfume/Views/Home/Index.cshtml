</section>

<section class="products-section">
    <div class="container">
        <!-- Section Header -->
        <div class="section-header">
            <h2><span class="active-tab">BESTSELLERS</span></h2>
        </div>

        <!-- Product Grid -->
        <div class="products-grid">
            <!-- Card 1 -->
            <div class="product-card">
                <div class="badge bestseller">BESTSELLER</div>
                <div class="badge discount">34% OFF</div>
                <img src="~/images/022.png" alt="Luxury Perfume Gift Set">
                <div class="product-info">
                    <p class="category">GIFT SET FOR MEN</p>
                    <h3>Luxury Perfume Gift Set</h3>
                    <p class="rating">⭐ 4.7 | (1.2K Reviews)</p>
                    <p class="price">₹565.00 <span class="old-price">₹849.00</span></p>
                    <button class="add-to-cart">ADD TO CART</button>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="product-card">
                <div class="badge bestseller">BESTSELLER</div>
                <div class="badge discount">45% OFF</div>
                <img src="~/images/022.png" alt="CEO Man Perfume">
                <div class="product-info">
                    <p class="category">EAU DE PARFUM</p>
                    <h3>CEO Man Perfume - 100ml</h3>
                    <p class="rating">⭐ 4.8 | (754 Reviews)</p>
                    <p class="price">₹499.00 <span class="old-price">₹899.00</span></p>
                    <button class="add-to-cart">ADD TO CART</button>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="product-card">
                <div class="badge bestseller">BESTSELLER</div>
                <div class="badge discount">26% OFF</div>
                <img src="~/images/022.png" alt="Date Night Gift Set">
                <div class="product-info">
                    <p class="category">GLAMOUR ESSENTIALS KIT</p>
                    <h3>Date Night Gift Set</h3>
                    <p class="rating">⭐ 4.7 | (38 Reviews)</p>
                    <p class="price">₹599.00 <span class="old-price">₹799.00</span></p>
                    <button class="add-to-cart">ADD TO CART</button>
                </div>
            </div>

            <!-- Card 4 -->
            <div class="product-card">
                <div class="badge bestseller">BESTSELLER</div>
                <div class="badge offer">BUY 2 GET 2 FREE</div>
                <img src="~/images/022.png" alt="Kiss Proof Lipstick">
                <div class="product-info">
                    <p class="category">OUR BEST-SELLING 4 LIP SHADES</p>
                    <h3>Kiss Proof Liquid Lipstick</h3>
                    <p class="rating">⭐ 4.7 | (25 Reviews)</p>
                    <p class="price">₹699.00</p>
                    <button class="add-to-cart">ADD TO CART</button>
                </div>
            </div>
        </div>

        <!-- View All Button -->
        <div class="view-all">
            <button>VIEW ALL</button>
        </div>
    </div>
</section>


