@model ProductResponse
@{
    ViewBag.Title = "Checkout Page | Hearts Desire";
}
<link href="~/css/orders/orders.css" rel="stylesheet" />

<div class="container">
    <!-- Left Side: Billing Form -->
    <div class="left">
        <h2>Billing Details</h2>
        <div class="form-group">
            <label>Full Name</label>
            <input type="text" placeholder="Enter your name" required>
        </div>
        <div class="form-group">
            <label>Email Address</label>
            <input type="email" placeholder="Enter your email" required>
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input type="text" placeholder="Enter your phone number" required>
        </div>
        <div class="form-group">
            <label>Shipping Address</label>
            <input type="text" placeholder="Full address (e.g. house no, street)" required>
        </div>
        <div class="form-group">
            <label>City</label>
            <input type="text" placeholder="Enter city" required>
        </div>
        <div class="form-group">
            <label>State</label>
            <input type="text" placeholder="Enter state" required>
        </div>
        <div class="form-group">
            <label>Zip Code / PIN Code</label>
            <input type="text" placeholder="Enter zip or PIN code" required>
        </div>
        <div class="form-group">
            <label>Payment Method</label>
            <select>
                <option value="cod">Cash on Delivery</option>
                <option value="card">Credit/Debit Card</option>
                <option value="upi">UPI / Google Pay / PhonePe</option>
            </select>
        </div>
    </div>

    <!-- Right Side: Product Summary & Order -->
    <div class="right">
        <h2>Your Order</h2>
        <div class="product-summary">
            <div class="product-item">
                <img src="@Model.MainImagePath" alt="Perfume">
                <div class="product-info">
                    <h3>@Model.ProductName</h3>
                    <p>50ml Bottle</p>
                    <strong>₹@Model.ProductSalePrice</strong>
                </div>
            </div>

            <div class="order-summary">
                <p><span>Subtotal:</span> <span>₹@Model.ProductSalePrice</span></p>
                <p><span>Shipping:</span> <span>₹0</span></p>
                <p><strong>Total:</strong> <strong>₹2,049</strong></p>
            </div>

            <button class="btn" onclick="placeOrder()">Place Order</button>
        </div>
    </div> 
</div>

<script>
    function placeOrder() {
      alert("Your order has been placed successfully!");
    }
</script>